generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Associate {
  id            String  @id @default(uuid())
  accountId     String
  age           Int?
  firstName     String
  middleName    String?
  lastName      String
  isActive      Boolean
  hasDentalPlan Boolean
  planId        String  @unique
  plan          Plan    @relation(fields: [planId], references: [id])
}

model Plan {
  id          String     @id @default(uuid())
  name        String
  description String
  value       Float
  Associate   Associate?
}
